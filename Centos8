#java
dnf search openjdk
dnf install java-1.8.0-openjdk
dnf list installed | less    (z , b ) 
export JAVA_HOME=/usr/lib/jvm/jre1.8.0_65
export PATH=$JAVA_HOME/bin:$PATH
unset JAVA_HOME 


